<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backpix"
    android:gravity="bottom" >

    <ImageView
        android:id="@+id/bgSleepImg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/sunflower" />



    <Button
        android:id="@+id/abandonSleepBtn"
        android:layout_width="97dp"
        android:layout_height="77dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/abandonbtn"
        android:gravity="bottom|center_horizontal|clip_horizontal"
        android:shadowColor="#dddddd"
        android:shadowDx="1.5"
        android:shadowDy="1.5"
        android:textColor="#e4fbea" >

    </Button>
    <TextView
        android:id="@+id/minhourSleepTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fitsSystemWindows="false"
        android:shadowColor="#dddddd"
        android:shadowDx="1.5"
        android:shadowDy="1.5"
        android:shadowRadius="1.0"
        android:text="10:10"
        android:textColor="#FFFFFF"
        android:textScaleX="1.5"
        android:textSize="80dp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/secSleepTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/minhourSleepTxt"
        android:layout_below="@+id/minhourSleepTxt"
        android:text="50"
        android:textColor="#FFFFFF"
        android:textScaleX="1.9"
        android:textSize="40dp"
        android:typeface="monospace" />

    <ImageView
        android:id="@+id/sleepLabel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:background="@drawable/sleep_title_main"
        android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/hideTipSleepTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/secSleepTxt"
            android:layout_marginTop="100dp"
            android:alpha="0.7"
            android:background="#38390f"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="1.5"
            android:text="起床按钮将在约55分钟后原地复活"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#eeeeee"
            android:textSize="23sp"
            android:typeface="monospace"
            android:visibility="invisible" />

</RelativeLayout>