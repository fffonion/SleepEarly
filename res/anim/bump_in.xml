<?xml version="1.0" encoding="utf-8"?>

<set xmlns:android="http://schemas.android.com/apk/res/android" android:interpolator="@android:anim/accelerate_interpolator">
    <scale
        android:fromXScale="0.95" android:toXScale="1.05"
        android:fromYScale="0.95" android:toYScale="1.05"
        android:pivotX="0%" android:pivotY="100%"
        android:duration="200" />
    <scale 
        android:fromXScale="1.05" android:toXScale="0.95"
        android:fromYScale="1.05" android:toYScale="0.95"
        android:pivotX="0%" android:pivotY="100%"
        android:startOffset="200"
        android:duration="100" />
   
</set>